
armstrongNumbers.isArmstrongNumber : Nat -> Boolean
armstrongNumbers.isArmstrongNumber number =
  lowestDigitValue = (Char.toNat ?0)

  numberString = number |> Nat.toText 
  digits = Text.toCharList numberString 
  power = (List.size digits)
  powers = List.map (digit -> Nat.pow ((Char.toNat digit) - lowestDigitValue) power) digits
  sum = List.foldLeft (Nat.+) 0 powers

  sum === number
